{
  "id": "se.marcussite.pubtransportskane",
  "version": "0.0.3",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Public transport Sk√•ne, Sweden"
  },
  "description": {
    "en": "Use this app to check when next bus/train departure from selected station"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Marcus Alsterfjord",
    "email": "marcus@marcussite.se"
  },
  "flow": {
    "triggers": [
      {
        "id": "skanetransport_trigger_next_departure",
        "title": {
          "en": "Triggered departure"
        },
        "tokens": [
          {
            "name": "next_departure",
            "type": "string",
            "title": {
              "en": "Time"
            },
            "example": "10:00"
          },
          {
            "name": "route_name",
            "type": "string",
            "title": {
              "en": "Name"
            },
            "example": "Bus 219"
          },
          {
            "name": "delayed",
            "type": "boolean",
            "title": {
              "en": "Delayed?"
            },
            "example": "true/false"
          }
        ]
      }
    ],
    "conditions": [],
    "actions": [
      {
        "id": "skanetransport_find_next_departure",
        "title": {
          "en": "Find departure time"
        },
        "args": [
          {
            "name": "stationFrom",
            "type": "autocomplete",
            "placeholder": {
              "en": "From station..."
            }
          },
          {
            "name": "stationTo",
            "type": "autocomplete",
            "placeholder": {
              "en": "To station..."
            }
          }
        ]
      }
    ]
  }
}